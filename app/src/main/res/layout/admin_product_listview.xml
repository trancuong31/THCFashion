<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgeViewAdProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_row_show_idStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Id Product"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgeViewAdProduct"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_row_PriceProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="IPrice"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgeViewAdProduct"
            app:layout_constraintTop_toBottomOf="@id/txt_row_show_nameStore" />

        <TextView
            android:id="@+id/txt_row_show_nameStore"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/imgeViewAdProduct"
            android:layout_height="wrap_content"
            android:text="Name Product"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_row_show_idStore" />

        <TextView
            android:id="@+id/txt_row_show_number"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/imgeViewAdProduct"
            android:layout_height="wrap_content"
            android:text="Name Product"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_row_PriceProduct" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>